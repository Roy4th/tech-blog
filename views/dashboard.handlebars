<section class="container mt-1">
    <h2 class="bg-primary">Create New Post</h2>
    <form class="new-post-form border border-3">
        <div class="d-flex justify-content-center">
            <label for="post-title">Title</label>
        </div>
        <div class="d-flex justify-content-center">
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div class="d-flex justify-content-center">
            <label for="post-content">Content</label>
        </div>
        <div class="d-flex justify-content-center">
            
            <input type="text" name="post-content" id="post-content"></input>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-info">Create</button>
        </div>
    </form>
</section>

{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ol>
        {{#each posts}}
        <article class="row border border-2">
            <div class="d-flex gap-1 bg-primary">
                <a href="/post/{{id}}" class="text-decoration-none text-black fs-1">{{title}}</a>
                <p class="pt-3">by: {{user.username}}</p>
                <p class="pt-3">{{formate_date created_at}}</p>
            </div>
            <div class="">
                <p class="">{{content}}</p>
            </div>
        </article>
        <a href="/dashboard/edit/{{id}}" class="edit-link">Edit post</a>

        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>