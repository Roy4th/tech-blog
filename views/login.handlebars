<form class=" bg-light col-4 p-5 rounded border border-3" id="signup-form">
    <div class="d-flex justify-content-center pb-3">
        <h1>Sign Up</h1>
    </div>
    <div class="d-flex justify-content-center">
        <label for="username-signup">username:</label>
    </div>
    <div class="d-flex justify-content-center">
        <input type="text" id="username-signup" />
    </div>
    <div class="d-flex justify-content-center">
        <label for="email-signup">email:</label>
    </div>
    <div class="d-flex justify-content-center">
        <input type="text" id="email-signup" />
    </div>
    <div class="d-flex justify-content-center">
        <label for="password-signup">password:</label>
    </div>
    <div class="d-flex justify-content-center">
        <input type="text" id="password-signup" />
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" id="signup-submit" class="btn btn-primary px-5 mt-1">Submit</button>
    </div>
</form>

<form class="login-form bg-light col-4 p-5 rounded border border-3" id="login-form">
    <div class="d-flex justify-content-center pb-3">
        <h1>Login</h1>
    </div>
    <div class="d-flex justify-content-center">
        <label for="email-login">email:</label>
    </div>
    <div class="d-flex justify-content-center">
        <input type="text" id="email-login" />
    </div>
    <div class="d-flex justify-content-center">
        <label for="password-login">password:</label>
    </div>
    <div class="d-flex justify-content-center">
        <input type="text" id="password-login" />
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" id="login-submit" class="btn btn-primary px-5 mt-1">Submit</button>
    </div>
</form>

<script src="/javascript/login.js"></script>